program
    x, y: double;
    e: int;
    d: float;
begin
    input x, d;
    y := 0.5234324234234;
    if (x > 0) then
        e := 0;
        while (x > 0)
        loop
            y := y * x;
            x := x - 1;
        end loop;
    else
        e := 1;
        d := x + y / 2;
    end if;
    output e, x, y;
end;